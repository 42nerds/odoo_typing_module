<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="snippet_selection" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]/t[@t-snippet='website.s_cover']" position="after">
            <t t-snippet="odoo_typing_module.snippet_c_banner" t-thumbnail="/odoo_typing_module/static/src/img/snippets/s_banner.png" />
        </xpath>
    </template>

    <template id="snippet_c_banner" name="Typing Module">
        <section class="snippet_c_banner">
            <div id="banner_box" class="container">
                <div id="rotation">
                    <h1>
                        Die Antwort auf
                        <span 
                            class="txt-rotate" 
                            data-period="2000" 
                            data-rotate='[ "(fast)Alles", "Softwareentwicklung", "Digitalisierung", "Operations", "DevOps", "Internetmarketing", "Cyber-Security", "Websites"]'></span>
                    </h1>
                </div>
            </div>
        </section>
    </template>

    <template id="assets_frontend" inherit_id="website.assets_frontend" priority="1">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/odoo_typing_module/static/scss/index.scss" />
        </xpath>
    </template>

    <template id="layout_inherit" name="particle assets" inherit_id="website.layout">
        <xpath expr="//body" position="inside">
            <script src="/odoo_typing_module/static/js/app.js"></script>
        </xpath>
    </template>
</odoo>